#include <stdio.h>
#define MAX 5  // Stack ki maximum size

int stack[MAX];
int top = -1;

// Stack full hai ya nahi, check karna
int isFull() {
    return top == MAX - 1;
}

// Stack empty hai ya nahi, check karna
int isEmpty() {
    return top == -1;
}

// Stack mein element push karna
void push(int value) {
    if (isFull()) {
        printf("Stack Overflow\n");
    } else {
        stack[++top] = value;
        printf("%d pushed to stack\n", value);
    }
}

// Stack se element pop karna
int pop() {
    if (isEmpty()) {
        printf("Stack Underflow\n");
        return -1;
    } else {
        return stack[top--];
    }
}

// Top element ko dekhna bina pop kiye
int peek() {
    if (isEmpty()) {
        printf("Stack is empty\n");
        return -1;
    } else {
        return stack[top];
    }
}

// Stack ke elements display karna
void display() {
    if (isEmpty()) {
        printf("Stack is empty\n");
    } else {
        printf("Stack elements are:\n");
        for (int i = top; i >= 0; i--) {
            printf("%d\n", stack[i]);
        }
    }
}

int main() {
    push(10);
    push(20);
    push(30);
    display();  // Stack ko display karna
    
    printf("Top element is %d\n", peek());
    printf("Popped element is %d\n", pop());
    display();  // Popping ke baad stack ko display karna
    
    return 0;
}
